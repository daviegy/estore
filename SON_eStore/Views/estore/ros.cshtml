@model IEnumerable<SON_eStore.Models.itemsViewModel>

@{
    ViewBag.Title = "Running out of Stock items";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    int counter = 0;
}

<section class="content-header">
    <h1>
        Dashboard
        <small>Items List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/estore/dashboard"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">Running out of stock</li>
    </ol>
</section>
<section class="content">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="panel panel-success">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="table" class="table table-bordered table-striped" style="text-transform:capitalize">
                            <thead>
                                <tr>
                                    <th colspan="5" style="text-align:center; color:red;font-size:x-large">ITEMS RUNNING OUT OF STOCK</th>
                                </tr>
                                <tr>
                                    <th>SN</th>
                                    <th>
                                        Item ID
                                    </th>
                                    <th>
                                        Item Name
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Quatity Available (in base unit)
                                    </th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td>@counter</td>
                                        <td>
                                            @item.id
                                        </td>
                                        <td>
                                            @item.product_name
                                        </td>
                                        <td>
                                            @item.category_name
                                        </td>
                                        <td>
                                            @item.qtyAvailable @item.item_base_unit
                                        </td>


                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
@if (Model.Count() > 0)
{
    <a id="btnExport" href="/ExcelReport/Running_out_of_stock" title="Export to excel" class="btn btn-success">Export to Excel &nbsp;<i class="glyphicon glyphicon-export "></i></a>
    <a class="btn btn-info" href="/printRPT/Print_Runing_Out_stock">Print &nbsp;&nbsp;<i class="glyphicon glyphicon-print"></i></a>
}
                       
                        <button class="btn btn-danger" onclick="history.go(-1);"><i class="glyphicon glyphicon-chevron-left"> </i>Go Back</button>                
                </div>

            </div>

        </div>
    </div>
</section>



@section scripts{

    <script src="~/Scripts/bootstrap-table.js"></script>
    <script>
    $('#table').bootstrapTable({

        striped: true,
        // cardView: true,
        pagination: true,
        pageSize: 15,
        pageList: [15, 25, 50, 100, 200],
        smartDisplay: false,
        //showToggle: true,
        search: true,
        //showColumns: true,
        //showRefresh: true,
        //    border : true
        //align: 'center',
        //valign: 'bottom'

    });
    </script>

}



