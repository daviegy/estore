
@{
    ViewBag.Title = "resetPassword";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<section class="content-header">
    <h1>
        Dashboard
        <small>Reset Password</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/estore/Dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active">Reset password</li>
    </ol>
</section>
<section class="content">
    <div ng-controller="loginController" class="col-lg-offset-4">
        <div class="col-md-5">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h2>Reset password</h2>
                </div>
                <div class="panel-body">
                    <form name="rsPassform" ng-submit="resetpassword()" novalidate>
                        <div class="form-group has-feedback">
                            <label class="control-label">Username</label>
                            <input type="text" required class="form-control" name="Username" placeholder="Username" ng-model="Username">
                            <span class="glyphicon glyphicon-user form-control-feedback" ng-show="rsPassform.Username.$dirty && rsPassform.Username.$invalid"></span>
                            <span class="text-danger" ng-show="rsPassform.Username.$error.required">Username is required</span>

                        </div>
                        <div class="form-group has-feedback">
                            <label class="control-label">New Password</label>
                            <input type="password" ng-minlength="6" class="form-control" placeholder="New password" name="n_pass" ng-model="n_pass" required>
                            <span class="glyphicon glyphicon-lock form-control-feedback" ng-show="rsPassform.n_pass.$dirty && rsPassform.n_pass.$invalid"></span>
                            <span class="text-danger" ng-show="rsPassform.n_pass.$error.required">New password is required</span>
                            <span ng-show="rsPassform.n_pass.$error.minlength" class="help-block text-danger">Minimum 6 character</span>
                        </div>
                        <div class="form-group has-feedback">
                            <label class="control-label">Confirm Password</label>
                            <input type="password" class="form-control" match-password="n_pass" placeholder="Confirm password" name="rt_pass" ng-model="rt_pass" required>
                            <span class="glyphicon glyphicon-lock form-control-feedback" ng-show="rsPassform.rt_pass.$dirty && rsPassform.rt_pass.$invalid"></span>
                            <span class="text-danger" ng-show="rsPassform.rt_pass.$error.required">Confirm password is required</span>
                            <span class="text-danger" ng-show="rsPassform.rt_pass.$error.matchPassword && !rsPassform.rt_pass.$error.required">Confirm password didn't match</span>
                        </div>
                        <div class="row">
                            <div class="col-xs-7">
                                <button class="btn btn-success btn-block btn-flat" type="submit" ng-disabled="rsPassform.rt_pass.$dirty && rsPassform.rt_pass.$invalid ||
                                            rsPassform.n_pass.$dirty && rsPassform.n_pass.$invalid ||
                                             rsPassform.o_pass.$dirty && rsPassform.o_pass.$invalid
                                            ">
                                    Reset password
                                </button>
                            </div>
                            <!-- /.col -->
                            <button class="btn btn-danger  col-xs-4" onclick="history.go(-1);"><i class="glyphicon glyphicon-chevron-left"> </i>Go Back</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</section>

@section scripts{
    <script src="~/Angular/confirm_password_dir.js"></script>
}
