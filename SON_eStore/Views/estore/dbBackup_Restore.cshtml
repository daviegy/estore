@{
    ViewBag.Title = "Restore DB";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<section class="content-header">
    <h1>
        Dashboard
        <small>Backup Database</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/estore/Dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active">Backup datasbase</li>
    </ol>
</section>
<section class="content">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-xs-12">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Backup Database</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    <div class="box-body">
                        <form action="/estore/dbBackup" method="post">
                            <div class="input-group input-group-sm col-xs-7">
                                <input type="file" name="location" required placeholder="Select  location to save" class="form-control" />
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-info btn-flat">Backup<i class="glyphicon glyphicon-plus"></i></button>
                                </span>

                            </div>
                        </form>
                    </div>
                </div>

            </div>


        </div>
    </div>
</section>
